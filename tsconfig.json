{
  "ts-node": {
    "files": true
  },
  "files": ["config.ts", "src/global.d.ts", "src/index.ts"],

  "compilerOptions": {
    "target": "ES2016",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "config.ts", "src/global.d.ts"],
  "exclude": ["node_modules"]
}
